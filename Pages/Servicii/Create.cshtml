@page
@model SalonBellissima.Pages.Servicii.CreateModel

@{
    ViewData["Title"] = "Adaugă serviciu";
}

<h1>Create</h1>

<h4>Serviciu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Serviciu.Denumire" class="control-label"></label>
                <input asp-for="Serviciu.Denumire" class="form-control" />
                <span asp-validation-for="Serviciu.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.CategorieID" class="control-label">Categorie</label>
                <select asp-for="Serviciu.CategorieID" class="form-control" asp-items="ViewBag.CategorieID"></select>
                <span asp-validation-for="Serviciu.CategorieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.Pret" class="control-label"></label>
                <input asp-for="Serviciu.Pret" class="form-control" />
                <span asp-validation-for="Serviciu.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.Durata" class="control-label"></label>
                <input asp-for="Serviciu.Durata" class="form-control" />
                <span asp-validation-for="Serviciu.Durata" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;
                                    foreach (var emp in Model.AngajatAsociatDataList)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                            @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                name="selectedAngajati"
                                                value="@emp.AngajatID"
                                                @(Html.Raw(emp.Asociat ? "checked=\"checked\"" : "")) />
                                            @emp.AngajatID @: @emp.NumeAngajat
                                        @:</td>
                                    }
                            @:</tr>
                            }
                        </table>
                    </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
